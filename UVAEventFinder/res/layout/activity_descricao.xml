<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    tools:context="${relativePackage}.${activityClass}" >
    <TableRow
        android:id="@+id/table_Vag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/table_Confirm"
        android:layout_alignLeft="@+id/table_Confirm" >
        
        <TextView
            android:id="@+id/textView_vagas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vagas Disponíveis:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_vagasResp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            android:textColor="#00F" />

    </TableRow>

    <TableRow
        android:id="@+id/table_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/table_Vag"
        android:layout_alignLeft="@+id/table_Vag" >

        <TextView
            android:id="@+id/textView_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_enderecoResp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rua Ibituruna, 52"
            android:textColor="#00F" />

    </TableRow>

    <TableLayout
        android:id="@+id/tableLayout_Especif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/table_endereco"
        android:layout_alignLeft="@+id/table_endereco" >

        <TableRow
            android:id="@+id/table_tema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_tema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tema:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_temaResp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minicurso"
                android:textColor="#00F" />

        </TableRow>

        <TableRow
            android:id="@+id/table_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Início:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_inicioResp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/04/2016 10:00h"
                android:textColor="#00F" />

        </TableRow>

        <TableRow
            android:id="@+id/table_fim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_fim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fim:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_fimResp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/04/2016 15:00h"
                android:textColor="#00F" />

        </TableRow>

        <TableRow
            android:id="@+id/table_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_localResp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auditório UVA"
                android:textColor="#00F" />

        </TableRow>

        <TableRow
            android:id="@+id/table_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_siteResp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eventos.uva.br/webday2016"
                android:textColor="#00F" />

        </TableRow>
    </TableLayout>

    <TableRow
        android:id="@+id/table_Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_OP"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="21dp" >

        <TextView
            android:id="@+id/textView_inscrever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deseja se Inscrever?"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox_inscreverResp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sim" />

    </TableRow>
    
        <TextView
            android:id="@+id/txvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tableLayout_Especif"
            android:layout_alignParentLeft="true"
            android:inputType="textMultiLine"
            android:text="Este será um evento técnico, onde os conceitos atuais serão vistos mais a fundo. Pelo conceitoado Professor Hércules. Serão permitidis até 250 inscritos."
            android:textColor="#008800"
            android:textSize="15sp"
            android:textStyle="bold" />

 

    <Button
        android:id="@+id/button_OP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Dê sua opinião sobre o evento"
        android:textSize="15sp" />

    <TableRow
        android:id="@+id/table_imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="top" >

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:contentDescription="@string/strlogo"
            android:src="@drawable/logotopo"
            tools:ignore="HardcodedText" />

    </TableRow>

    <TableRow
        android:id="@+id/table_imgEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp" >

        <ImageView
            android:id="@+id/imgEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:contentDescription="@string/strlogo"
            android:src="@drawable/logotopo"
            tools:ignore="HardcodedText" />
    </TableRow>

</RelativeLayout>